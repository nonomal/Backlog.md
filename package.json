{
	"name": "backlog.md",
	"version": "1.5.2",
	"type": "module",
	"bin": {
		"backlog": "cli/index.js"
	},
	"optionalDependencies": {
		"backlog.md-darwin-arm64": "*",
		"backlog.md-darwin-x64": "*",
		"backlog.md-linux-arm64": "*",
		"backlog.md-linux-x64": "*",
		"backlog.md-windows-x64": "*"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.1",
		"@tailwindcss/cli": "4.1.11",
		"@types/bun": "1.2.18",
		"@types/prompts": "2.4.9",
		"@types/react": "19.1.8",
		"@types/react-dom": "19.1.6",
		"@types/react-router-dom": "5.3.3",
		"@uiw/react-md-editor": "4.0.7",
		"blessed": "npm:neo-neo-bblessed@1.0.3",
		"commander": "14.0.0",
		"fuse.js": "7.1.0",
		"gray-matter": "4.0.3",
		"husky": "9.1.7",
		"install": "^0.13.0",
		"lint-staged": "16.1.2",
		"prompts": "2.4.2",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-router-dom": "7.6.3",
		"react-tooltip": "5.29.1",
		"tailwindcss": "4.1.11",
		"typescript": "5.8.3"
	},
	"scripts": {
		"test": "bun test",
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"check": "biome check .",
		"check:types": "bunx tsc --noEmit",
		"prepare": "husky",
		"build:css": "tailwindcss -i ./src/web/styles/source.css -o ./src/web/styles/style.css --minify",
		"build": "bun run build:css && bun build --production --compile --minify --outfile=dist/backlog src/cli.ts",
		"cli": "bun run build:css && bun src/cli.ts"
	},
	"lint-staged": {
		"package.json": [
			"biome check --write --files-ignore-unknown=true"
		],
		"*.json": [
			"biome check --write --files-ignore-unknown=true"
		],
		"src/**/*.{ts,js}": [
			"biome check --write --files-ignore-unknown=true"
		]
	},
	"author": "Alex Gavrilescu (https://github.com/MrLesk)",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/MrLesk/Backlog.md.git"
	},
	"bugs": {
		"url": "https://github.com/MrLesk/Backlog.md/issues"
	},
	"homepage": "https://backlog.md",
	"keywords": [
		"cli",
		"markdown",
		"kanban",
		"task",
		"project-management",
		"backlog",
		"agents"
	],
	"license": "MIT",
	"trustedDependencies": [
		"@biomejs/biome",
		"node-pty"
	]
}
